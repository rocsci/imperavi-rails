<style>
textarea { width: 700px; }
</style>

<%= form_for(@page) do |f| %>
  <% if @page.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@page.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @page.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :article %><br />
    <%= f.text_area :article %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= include_imperavi_stylesheet %>
<%= include_imperavi_javascript %>

<script>
$(document).ready(function() {
  $('#page_article').imperavi()
});
</script>

